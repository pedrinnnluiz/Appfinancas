<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Appfinanças.SetupFinanceiro"
             Title="Setup Financeiro">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="20"
            VerticalOptions="Center">

            <Label 
                Text="Para o primeiro passo, digite os valores solicitados nos campos abaixo."
                FontSize="20"
                HorizontalTextAlignment="Center"/>

            <Entry
                x:Name="SalarioEntry"
                Placeholder="Digite o valor do salário"
                Keyboard="Numeric"
                HeightRequest="50"/>

            <Entry
                x:Name="GastosEntry"
                Placeholder="Digite seus gastos fixos"
                Keyboard="Numeric"
                HeightRequest="50"/>

            <Button
                Text="Avançar para valores"
                CornerRadius="15"
                HeightRequest="55"
                FontAttributes="Bold"
                Clicked="Avancar_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
