<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Appfinanças.MainPage"
    Title="Controle Financeiro">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- SALDO -->
            <Label
                x:Name="resultadoLabel"
                FontSize="22"
                FontAttributes="Bold"
                TextColor="Green" />

            <!-- DESCRIÇÃO -->
            <Entry
                x:Name="DescricaoEntry"
                Placeholder="Descrição (Ex: Mercado, Lanche, Salário)"
                Margin="0,10,0,0" />

            <!-- ENTRADA -->
            <Entry
                x:Name="EntradaEntry"
                Placeholder="Valor de entrada"
                Keyboard="Numeric" />

            <Button
                Text="Adicionar Entrada"
                Clicked="AdicionarEntrada_Clicked" />

            <!-- GASTO -->
            <Entry
                x:Name="GastoEntry"
                Placeholder="Valor de gasto"
                Keyboard="Numeric" />

            <Button
                Text="Adicionar Gasto"
                Clicked="AdicionarGasto_Clicked" />

            
            <Label
                Text="Extrato"
                FontSize="20"
                FontAttributes="Bold"
                Margin="0,20,0,10" />


            <Button
    Text="LimparExtrato"
    BackgroundColor="Red"
    TextColor="White"
    Clicked="LimparExtrato_Clicked" />

            <CollectionView x:Name="ExtratoCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10"
                               Margin="5"
                               BorderColor="LightGray"
                               CornerRadius="10">

                            <VerticalStackLayout Spacing="4">

                                
                                <Label Text="{Binding Tipo}"
                                       FontAttributes="Bold" />

                                
                                <Label Text="{Binding Descricao}"
                                       FontAttributes="Italic"
                                       TextColor="Gray" />

                                <Label Text="{Binding Valor, StringFormat='R$ {0:F2}'}"
                                       FontSize="16" />

                                
                                <Label Text="{Binding Data, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                       FontSize="12"
                                       TextColor="DarkGray" />

                            </VerticalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
